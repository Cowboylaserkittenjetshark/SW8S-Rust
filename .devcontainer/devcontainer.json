{
    "name": "SW8 Rust Development",
    "image": "ghcr.io/sarangar/sw8s-rust:main",
    "initializeCommand": "bash .devcontainer/init.sh",
    "postStartCommand": "bash .devcontainer/postStart.sh",
    "remoteEnv": {
        "PATH": "${containerWorkspaceFolder}/scripts:${containerEnv:PATH}"
    },
    "runArgs": [
        "--network=host",
        "--name=sw8-rust",
        "--init"
    ],
    "privileged": true,
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-azuretools.vscode-docker",
                "Github.copilot",
                "eamodio.gitlens",
                "appulate.filewatcher",
                "formulahendry.code-runner"
            ]
        }
    }

}